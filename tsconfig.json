{
  "compilerOptions": {
    "target": "esnext",
    "module": "Commonjs",
    "lib": ["es5"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": false,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}